{
    "name": "genres-getter",
    "version": "1.0.2",
    "description": "This application gets the top genres of the track you are currently listening to on Spotify, as by the tags assigned to it on Last.fm",
    "main": "main.js",
    "author": "Anton Wittig",
    "type": "module",
    "scripts": {
        "start": "electron .",
        "test": "echo \"Error: no test specified\" && exit 1",
        "app:dir": "electron-builder --dir",
        "app:build": "electron-builder --build",
        "app:dist": "electron-builder"
    },
    "keywords": [],
    "license": "ISC",
    "dependencies": {
        "cookie-parser": "^1.3.2",
        "cors": "^2.8.5",
        "express": "^4.21.2",
        "request": "^2.88.2"
    },
    "devDependencies": {
        "electron": "^33.2.1",
        "electron-builder": "^25.1.8"
    },
    "build": {
        "appId": "com.antonwittig.genres-getter",
        "win": {
            "compression": "store",
            "target": "msi",
            "icon": "./assets/icon.ico",
            "files": [
                "./**/*"
            ]
        },
        "directories": {
            "app": "."
        }
    }
}
